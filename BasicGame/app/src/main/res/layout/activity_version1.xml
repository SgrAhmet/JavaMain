<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Version1">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="geriGit"
        android:text="Geri"
        app:icon="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/stitch_removebg_preview" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/stitch_removebg_preview" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/EnYuksekSkor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="En Yüksek Skor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/KalanSure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="KalanSüre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Skor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Skor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>